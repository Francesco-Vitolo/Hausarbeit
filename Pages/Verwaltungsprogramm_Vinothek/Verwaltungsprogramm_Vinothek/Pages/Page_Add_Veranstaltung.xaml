<Page x:Class="Verwaltungsprogramm_Vinothek.Pages.Page_Add_Veranstaltung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Verwaltungsprogramm_Vinothek.Pages" xmlns:local1="clr-namespace:Verwaltungsprogramm_Vinothek.User_Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Add_Veranstaltung">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <local1:Uc_Veranstaltung x:Name="felder"/>
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="AddProd" Content="+" Click="AddProd_Click"/>
                <Button x:Name="SaveEvent" Content="Save" Click="SaveEvent_Click"/>
                <Button x:Name="DelProd" Content="X" Click="DelProd_Click"/>
            </WrapPanel>
        </StackPanel>
        <Border Grid.Row="2" Grid.Column="1" BorderThickness="1" BorderBrush="Black" CornerRadius="4" Margin="10" >
            <DataGrid  Name="data" />
        </Border>
    </Grid>
</Page>

