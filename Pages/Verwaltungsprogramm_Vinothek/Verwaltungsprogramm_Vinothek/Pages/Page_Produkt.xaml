<Page x:Class="Verwaltungsprogramm_Vinothek.Pages.Page_Produkt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local1="clr-namespace:Verwaltungsprogramm_Vinothek.User_Controls"
      mc:Ignorable="d"
      Title="Page_Produkt">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="32"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Modus: " />
                <TextBlock Name="modus" Text="anschauen" Foreground="Red"/>
            </StackPanel>
            <local1:Uc_Produkt IsEnabled="False" x:Name="felder" Grid.Column="1" Grid.Row="0"/>
            <UniformGrid Grid.Row="1" Grid.Column="1" Rows="1" >
                <UniformGrid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource Button_Titlebar}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="Height" Value="75"/>
                        <Setter Property="Width" Value="75"/>
                    </Style>
                </UniformGrid.Resources>
                <Button x:Name="btn_show_pdf" Click="btn_show_pdf_Click" Content="PDF anschauen" />
                <Button x:Name="btn_download_pdf" Click="btn_download_pdf_Click" Content="PDF downloaden" />
                <Button x:Name="UmschaltenBearbeiten" Click="UmschaltenBearbeiten_Click">
                    <Image Source="..\Pictures\edit.png"/>
                </Button>
                <Button Click="Add_Produzent_Click">
                    <!--<Image/--><!-->-->
                </Button>
                <Button x:Name="saveChanges" Content="save" Click="saveChanges_Click" />
            </UniformGrid>
            <StackPanel Grid.Column="2" >
                <Image Source="{Binding Picture}" Name="pic" MaxHeight="620" VerticalAlignment="Top" Margin="0,100"/>
                <Button  Content="Bild hochladen/ändern" FontSize="24"  Click="Button_Click_BildAuswählen"/>
                <Label Name="path" HorizontalAlignment="Center"/>
                <Button  Content="PDF erstellen" FontSize="24"  Click="btn_create_pdf_Click"/>
                <Button  Content="Bild aus Zwischenablage" FontSize="24"  Click="btn_zwischenablage_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
