<Window x:Class="Verwaltungsprogramm_Vinothek.Window_Wein"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verwaltungsprogramm_Vinothek"
        mc:Ignorable="d"
        Title="Window_Wein" Height="1000" Width="900">
    <Grid>
        <local:Default/>
        <Grid Margin="0,32,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <local:Uc_Produkt IsEnabled="False" x:Name="felder" Grid.Column="1"/>
            <StackPanel Grid.Column="2">
                <Button x:Name="UmschaltenBearbeiten" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Click="UmschaltenBearbeiten_Click">
                    <!--<Image Source="umschalten.png"/>-->
                </Button>
                <Button x:Name="btn_show_pdf" Click="btn_show_pdf_Click" Content="PDF" />
                <Button x:Name="saveChanges" Content="save" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
