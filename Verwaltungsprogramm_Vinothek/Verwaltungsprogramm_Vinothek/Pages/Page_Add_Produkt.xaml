<Page x:Class="Verwaltungsprogramm_Vinothek.Pages.Page_Add_Produkt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Verwaltungsprogramm_Vinothek.Pages" 
      xmlns:local1="clr-namespace:Verwaltungsprogramm_Vinothek.User_Controls"
      mc:Ignorable="d"
      Title="Page_Add_Produkt">
    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource Button_Style2}">
        </Style>
    </Page.Resources>

    <Grid x:Name="MainGrid">
   
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Button Click="Button_Click_BildausZwischenablage">
                        <Image Source="..\Pictures\clipboard.png"/>
                    </Button>

                    <Button Click="Button_Click_BildAuswählen">
                        <Image Source="..\Pictures\bild.png"/>
                    </Button>

                    <Button Click="Button_Click_BildEntfernen">
                        <Image Source="..\Pictures\cross.png"/>
                    </Button>

                    <TextBlock Name="ImgSrc" Margin="5" Text="" TextWrapping="Wrap"/>
                </StackPanel>

                <local1:Uc_Produkt x:Name="test"/>
                <Button x:Name="saveChanges" Click="Button_Click_SaveChanges" HorizontalAlignment="Right">
                    <Image Source="..\Pictures\save.png"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
