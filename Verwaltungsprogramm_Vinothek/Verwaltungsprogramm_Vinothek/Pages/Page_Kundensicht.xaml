<Page x:Class="Verwaltungsprogramm_Vinothek.Pages.Page_Kundensicht"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Verwaltungsprogramm_Vinothek.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1800"
      Title="Page_Kundensicht" >
   
    <ScrollViewer >
        <UniformGrid x:Name="maingrid" Margin="50">
            <UniformGrid.LayoutTransform>
                <ScaleTransform ScaleX="10" ScaleY="10"/>
            </UniformGrid.LayoutTransform>
            <UniformGrid.Resources>
                <Style TargetType="Image">
                    <Setter Property="Margin" Value="14"/>
                </Style>
            </UniformGrid.Resources>
        </UniformGrid>
    </ScrollViewer>
</Page>
