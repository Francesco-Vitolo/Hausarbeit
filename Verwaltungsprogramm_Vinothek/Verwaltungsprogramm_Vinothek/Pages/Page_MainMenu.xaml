<Page x:Class="Verwaltungsprogramm_Vinothek.Pages.Page_MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local1="clr-namespace:Verwaltungsprogramm_Vinothek.User_Controls"
      xmlns:properties="clr-namespace:Verwaltungsprogramm_Vinothek.Properties"
      
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1900"
      Title="Page_MainMenu">

    <Grid Name="Grid_Menu">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Image Source="..\Pictures\Logo.png" Grid.ColumnSpan="3" VerticalAlignment="Top" HorizontalAlignment="Center" MaxHeight="200"/>
        <Button x:Name="Dokumentation" Content="Dokumentation" Style="{StaticResource Button_Style2}" Width="200" Grid.Column="2" Click="Dokumentation_Click"/>
        <UniformGrid Grid.Row="1" Columns="1">
            <Button Name="ListeProdukte" Content="Produkte" Click="Button_MainMenu"/>
            <Button Name="ListeProduzenten" Content="Produzenten" Click="Button_MainMenu"/>
            <Button Name="ListeEvents"  Content="Events" Click="Button_MainMenu"/>
            <Button Name="Lite"  Content="Kundenansicht" Click="Button_Kundensicht"/>
        </UniformGrid>

        <Border  Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="20">
            <Grid x:Name="Options" Margin="50,5" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image Source="..\Pictures\settings.png" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-40,0,0,0"/>

                <TextBlock Text="Hintergrund: " VerticalAlignment="Center" FontSize="24" Grid.Column="1" Grid.Row="0"/>
                <TextBlock Text="Schriftfarbe: " VerticalAlignment="Center" FontSize="24" Grid.Column="1" Grid.Row="1"/>
                <TextBlock Text="Farben Buttons: " VerticalAlignment="Center" FontSize="24" Grid.Column="1" Grid.Row="2"/>
                <TextBlock Text="PDF - Verzeichnis: " Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>
                <TextBlock Text="Nutzerverwaltung: " Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2"/>
                

                <WrapPanel VerticalAlignment="Center" Grid.Column="2" Grid.Row="0">
                    <TextBox x:Name="tb_background" Text="#FFF"/>
                    <Button Click="Background_Click" Style="{StaticResource Button_Style2}" Width="auto" Height="auto" Content="übernehmen"/>
                </WrapPanel>

                <WrapPanel VerticalAlignment="Center" Grid.Column="2" Grid.Row="1">
                    <TextBox x:Name="tb_foreground" Text="#000"/>
                    <Button Click="Foreground_Click" Style="{StaticResource Button_Style2}" Width="auto" Height="auto" Content="übernehmen"/>
                </WrapPanel>

                <WrapPanel Grid.Column="2" Grid.Row="2" VerticalAlignment="Center">
                    <TextBox x:Name="tb_Color1" Text="#FF1E40DA"/>
                    <TextBox x:Name="tb_Color2" Text="#FF2FBFF5"/>
                    <Button Click="Color1_Click" Style="{StaticResource Button_Style2}" Width="auto" Height="auto" Content="übernehmen"/>
                </WrapPanel>
                
                <Button x:Name="PdfDir" MaxHeight="100" Click="PdfDir_Click" Grid.Column="2" Grid.Row="3">
                    <Image Source="..\Pictures\dir.png"/>
                </Button>


                <Button Name="UserVerwaltung" Click="Button_User" Grid.Column="2" Grid.Row="4">
                    <Image Source="..\Pictures\avatar.png"/>
                </Button>
                
                <StackPanel VerticalAlignment="Bottom"  Grid.ColumnSpan="3" Grid.Row="5">
                    <TextBlock Text="Icons used from:" FontSize="14"/>
                    <TextBlock Text="https://lordicon.com/" FontSize="14"/>
                    <TextBlock Text="https://www.flaticon.com/free-icons/" FontSize="14"/>
                </StackPanel>

                <Button Grid.Row="5" Grid.Column="2" Content="Googles Color Picker" Style="{StaticResource Button_Style2}" Width="250" Name="ColorPickerLink" Click="ColorPickerLink_Click"/>
            </Grid>
        </Border>
        
        <Viewbox  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxHeight="300" MaxWidth="300" Grid.Column="1" Grid.Row="1">
            <Calendar Background="{Binding Path=Background, Source={x:Static properties:Settings.Default}}" BorderBrush="Black" BorderThickness="2">
                <Calendar.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Calendar.Resources>
            </Calendar>
        </Viewbox>
        
    </Grid>
</Page>
