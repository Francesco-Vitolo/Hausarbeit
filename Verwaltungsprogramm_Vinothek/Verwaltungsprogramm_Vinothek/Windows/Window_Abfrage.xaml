<Window x:Class="Verwaltungsprogramm_Vinothek.Window_Abfrage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verwaltungsprogramm_Vinothek"
        mc:Ignorable="d"
         Title="Window_Abfrage" Height="340" Width="340"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.Resources>
                <Style TargetType="Border" BasedOn="{StaticResource Border}"/>
            </Grid.Resources>
        </Grid>
        <StackPanel x:Name="stackpanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="..\Pictures\Logo.png" Margin="20" VerticalAlignment="Top" MaxHeight="75"/>
            <WrapPanel x:Name="Text" HorizontalAlignment="Center"/>
            <WrapPanel HorizontalAlignment="Center">
                <Button Height="50" Width="125" Content="Ja" Click="Button_Click_Ja" Margin="15" Style="{StaticResource Button_Style2}"/>
                <Button Height="50" Width="125" Content="Nein" Click="Button_Click_Nein" Margin="15" Style="{StaticResource Button_Style2}"/>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
