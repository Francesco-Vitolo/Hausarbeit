<Window x:Class="Verwaltungsprogramm_Vinothek.Window_Anmelden"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verwaltungsprogramm_Vinothek" 
        xmlns:local1="clr-namespace:Verwaltungsprogramm_Vinothek.User_Controls"
        mc:Ignorable="d"
        Title="Window_Anmelden" Height="600" Width="500">
    <Grid>
        <local1:Uc_Default/>
        <Image Source="..\Pictures\Logo.png" Margin="50" VerticalAlignment="Top" MaxHeight="75"/>
        <UniformGrid HorizontalAlignment="Stretch" Columns="1" Margin="5">
            <TextBox Height="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="tb_username"/>
            <PasswordBox HorizontalContentAlignment="Center" Height="50" VerticalContentAlignment="Center" x:Name="tb_pw"/>
            <Button Height="50" Content="Anmelden" Click="Button_Click"/>
            <TextBlock x:Name="Alert" Text="Login fehlgeschlagen" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </UniformGrid>
    </Grid>
</Window>
